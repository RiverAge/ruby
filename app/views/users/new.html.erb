<% provide(:title, 'Sign up') %>


<div class="row">
  <%= form_for(@user, html: {class: "form-horizontal"}) do |f| %>
      <% if @user.errors.get(:name) %>
          <div class='form-group has-error'>
            <%= f.label :name, class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
              <%= f.text_field :name, class: 'form-control' %>
            </div>
          </div>
      <% else %>
          <div class="form-group">
            <%= f.label :name, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :name, class: 'form-control' %>
            </div>
          </div>
      <% end %>

      <% if @user.errors.get(:email) %>
          <div class='form-group has-error'>
            <%= f.label :email, class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
              <%= f.text_field :email, class: 'form-control' %>
            </div>
          </div>
      <% else %>
          <div class="form-group">
            <%= f.label :email, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :email, class: 'form-control' %>
            </div>
          </div>
      <% end %>

      <% if @user.errors.get(:password) %>
          <div class='form-group has-error'>
            <%= f.label :password, class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
              <%= f.password_field :password, class: 'form-control' %>
            </div>
          </div>
      <% else %>
          <div class="form-group">
            <%= f.label :password, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.password_field :password, class: 'form-control' %>
            </div>
          </div>
      <% end %>


      <% if @user.errors.get(:password_confirmation) %>
          <div class='form-group has-error'>
            <%= f.label :password_confirmation, 'Confirmation', class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
              <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>
          </div>
      <% else %>
          <div class="form-group">
            <%= f.label :password_confirmation, "Confirmation", class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>
          </div>
      <% end %>

      <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
          <%= f.submit 'Sign Up', class: 'btn btn-default' %>
        </div>
      </div>
  <% end %>
</div>