<% provide(:title, 'Sign up') %>

<div class="signup">
<%=form_for(:user, url: users_path, html: {class:'form-signin'}) do |f| %>

    <%= f.label :email %>
    <%= f.text_field :email, class:'form-control'%>
    <%= f.label :password %>
    <%= f.text_field :password, class:'form-control' %>
    <%= f.label :confirm %>
    <%= f.text_field :confirm, class:'form-control' %>
    <%= f.submit 'Sign Up', class: 'btn btn-lg btn-primary btn-block'%>

<% end %>
</div>