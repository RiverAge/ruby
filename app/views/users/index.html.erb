<% provide(:title, "All Users") %>


<div class="table-responsive">
  <table class="table table-hover" id="userlists">
    <thead>
        <tr>
          <th>UserName</th>
          <th>Email</th>
        </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.name, user %></td>
          <td><%= link_to user.email, user %></td>
        </tr>
    <% end %>
    </tbody>

  </table>

</div>

<script type="text/javascript">
    $(document).ready(function() {
        $('#userlists_length>label>select').addClass('form-control');
        $('#userlists_filter>label>input').addClass('form-control');
  });
</script>

