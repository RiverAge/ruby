<% provide(:title, 'Sign in') %>
<div class="account-wall">
  <%= form_for(:user, url: login_create_session_path) do |f| %>
    <div class="form-group">
      <%= f.label (t "common.name"), class: "control-label" %>
      <%= f.text_field :name, class: 'form-control', placeholder: 'User' %>
    </div>
    <div class="form-group">
      <%= f.label (t "common.password"), class: "control-label" %>
      <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
    </div>
    <div class="form-group">
      <div class="checkbox">
        <label>
          <%= f.check_box :rememberme %><%= (t "login.remember") %>
          <%= link_to (t "login.forgotpassword"), new_password_reset_path %>
        </label>
      </div>
    </div>
    <div class="form-group">
      <%= f.submit (t "common.signin"), class: 'btn btn-default' %>
    </div>
  <% end %>
</div>
