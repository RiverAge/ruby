<% provide(:title, 'Sign in') %>
<div class="form-container">
<%= form_for(:user, url: login_create_session_path, html:{class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <%= f.label (t "common.name"), class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control', placeholder: 'User' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label (t "common.password"), class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label>
            <%= f.check_box :rememberme %><%= (t "login.remember") %>
            <%= link_to (t "login.forgotpassword"), new_password_reset_path %>
        </label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit (t "common.signin"), class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
</div>
