<% provide(:title, 'Sign in') %>
<div class="form-container">
<%= form_for(:user, url: login_create_session_path, html:{class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control', placeholder: 'User' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label>
            <%= f.check_box :rememberme %>Remember me
            <%= link_to "Forgot Password?", new_password_reset_path %>
        </label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Sign in', class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
</div>
