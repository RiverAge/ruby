<% provide(:title, "Edit user") %>

<div class="form-container">
  <%= form_for(@user) do |f| %>
      <% if @user.errors.get(:name) %>
          <div class='form-group has-error'>
            <%= f.label (t "common.name"), class: 'control-label' %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
      <% else %>
          <div class="form-group">
          <%= f.label (t "common.name"), class: " control-label" %>
          <%= f.text_field :name, class: 'form-control' %>
          </div>
      <% end %>

      <% if @user.errors.get(:email) %>
          <div class='form-group has-error'>
            <%= f.label (t "common.email"), class: 'control-label' %>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
      <% else %>
          <div class="form-group">
          <%= f.label (t "common.email"), class: " control-label" %>
          <%= f.text_field :email, class: 'form-control' %>
              </div>
      <% end %>

      <% if @user.errors.get(:password) %>
          <div class='form-group has-error'>
            <%= f.label (t "common.password"), class: 'control-label' %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
      <% else %>
          <div class="form-group">
          <%= f.label (t "common.password"), class: " control-label" %>
          <%= f.password_field :password, class: 'form-control' %>
              </div>
      <% end %>


      <% if @user.errors.get(:password_confirmation) %>
          <div class='form-group has-error'>
            <%= f.label :password_confirmation, (t "common.passwordconfirmation"), class: 'control-label' %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
      <% else %>
          <div class="form-group">
          <%= f.label :password_confirmation, (t "common.passwordconfirmation"), class: 'control-label' %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
              </div>
      <% end %>

      <div class="form-group">
      <%= f.submit (t "common.signup"), class: 'btn btn-default' %>
      </div>
  <% end %>
</div>
