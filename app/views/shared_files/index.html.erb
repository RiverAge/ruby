<% provide(:title, (t "shared_file.title")) %>
<h3 style="text-align: center"><%= t "shared_file.title" %></h3>
<div class="table-responsive">
  <table class="dataTable table table-hover" id="shared_fileslist">
    <thead>
    <tr>
      <th>类别</th>
      <th>标题</th>
      <th>内容概要</th>
      <th>上传时间</th>
      <th>资料</th>
    </tr>
    </thead>

    <tbody>
    <% @shared_files.each do |shared_file| %>
        <tr>
          <td><%= shared_file.category %> </td>
          <td><%= shared_file.title %> </td>
          <td><%= shared_file.summary %> </td>
          <td><%= l shared_file.updated_at %> </td>
          <td><a href=<%= shared_file.path %>>下载</a></td>
        </tr>
    <% end %>
    </tbody>

  </table>
</div>
