        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'SimpleApp', root_path, class: 'navbar-brand' %>
    </div>
    <% if signed_in? %>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><%= link_to "Contact", "#" %></li>
            <li><%= link_to "Help", "#" %></li>

            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Operation<b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Container', containers_path %></li>
                <li><%= link_to 'Goods', goods_path %></li>
                <li><%= link_to 'SpecialGoods', specialgoods_path %></li>
              </ul>
            </li>

          </ul>
    <% end %>
    <ul class="nav navbar-nav navbar-right">
      <% if signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.name %><b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to 'Profile', current_user %></li>
              <li><%= link_to 'Settings', edit_user_url(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to 'Switch Account', login_path %></li>
              <li><%= link_to 'Sign out', logout_path %></li>
            </ul>
          </li>
      <% else %>
          <!--       <li><a href="#myModal" data-toggle="modal" data-target="#myModal">Log-in</a></li>-->
          <li><%= link_to "Sign In", login_path %></li>
          <li><%= link_to "Sign Up", signup_path %></li>
      <% end %>
    </ul>
    </div>
    <!--/.nav-collapse -->
  </div>
</div>

