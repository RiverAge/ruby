<body>
<div class="navbar navbar-default navbar-static-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">simple app</a>
    </div>
    <% if signed_in? %>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><%= link_to "Contact", "#" %></li>
            <li><%= link_to "Help", "#" %></li>
            <li><%= link_to "About", "#" %></li>
          </ul>
    <% end %>
    <ul class="nav navbar-nav navbar-right">
      <% if signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.name %><b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to 'Profile', current_user %></li>
              <li><%= link_to 'Settings', edit_user_url(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to 'Switch Account', signin_path %></li>
              <li><%= link_to 'Sign out', signout_path, method: 'delete' %></li>
            </ul>
          </li>
      <% else %>
          <!--       <li><a href="#myModal" data-toggle="modal" data-target="#myModal">Log-in</a></li>-->
          <li><%= link_to "Sign In", signin_path %></li>
          <li><%= link_to "Sign Up", signup_path %></li>
      <% end %>
    </ul>
    </div>
    <!--/.nav-collapse -->
  </div>
</div>

