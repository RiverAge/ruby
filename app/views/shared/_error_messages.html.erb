<% if @errors.any? %>
<div id="error_explanation">
  <div class="alert alert-danger">
    <%= t "user.controller.create_failed" %>
  </div>
  <div class="has-error">
  <ul>
    <% @errors.full_messages.each do |msg| %>
    <li class="text-danger"><%= msg %></li>
    <% end %>
  </ul>
</div>
</div>
<% end %>
