<% provide(:title, "All Container") %>


<div class="table-responsive">
  <table class="table table-hover" id="containerlist">
    <thead>
    <tr>
      <th>id</th>
      <th>状态</th>
      <th>提单号</th>
      <th>箱数</th>
      <th>负责人</th>
      <th>入库提交时间</th>
      <th>出库状态</th>
    </tr>
    </thead>

    <tbody>
    <% @containers.each do |container| %>
        <tr>
          <td><%= container.id %> </td>
          <td><%= container.状态 %> </td>
          <td><%= container.提单号 %> </td>
          <td><%= container.箱数 %> </td>
          <td><%= container.负责人 %> </td>
          <td><%= container.入库提交时间 %> </td>
          <td><%= container.出库状态 %> </td>
        </tr>
    <% end %>
    </tbody>

  </table>

</div>

<script type="text/javascript">
    $(document).ready(function() {

        $('#containerlist').dataTable({
            "oLanguage": {
                "sSearch":"检索:",
                "sLengthMenu":"每页显示 _MENU_ 条记录",
                "sZeroRecords":"空",
                "sInfoEmpty":"无记录",
                "sInfoFiltered":"(从 _MAX_ 条记录检索)",
                "sInfo": "_START_ 到 _END_ 条（共 _TOTAL_ 条）",
                "oPaginate": {
                    "sFirst":"<<",
                    "sLast":">>",
                    "sNext":"",
                    "sPrevious":""

                }

            }
        });

        $('#containerlist_length>label>select').addClass('form-control');
        $('#containerlist_filter>label>input').addClass('form-control');


    });
</script>