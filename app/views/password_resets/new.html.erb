<% provide(:title, 'Password Reset') %>
<%= form_tag password_resets_path, method: :post, class: 'form-horizontal' do %>



    <div class="form-group">
      <%= label_tag :email, 'Email:', :class =>'col-sm-2 control-label' %>

      <div class="col-lg-2">
        <%= text_field_tag :email, params[:email], class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
     <div class="col-sm-offset-2 col-sm-10">
    <%= submit_tag 'Reset Password', class: 'btn btn-default' %>
    </div>
    </div>

<% end %>