<% provide(:title, 'PasswordReset') %>

<div class='form-container'>
  <%= form_for @user, url:password_reset_path do |f| %>

      <% if @user.errors.get(:password) %>
          <div class='form-group has-error'>
            <%= f.label :password, class: 'control-label' %>
            <!--<div class=" col-sm-10">-->
            <%= f.password_field :password, class: 'form-control' %>
            <!--</div>-->
          </div>
      <% else %>
          <div class="form-group">
            <%= f.label :password, class: " control-label" %>
            <!--<div class=" col-sm-10">-->
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          <!--</div>-->
      <% end %>


      <% if @user.errors.get(:password_confirmation) %>
          <div class='form-group has-error'>
            <%= f.label :password_confirmation, 'Confirmation', class: 'control-label' %>
            <!--<div class=" col-sm-10">-->
            <%= f.password_field :password_confirmation, class: 'form-control' %>
            <!--</div>-->
          </div>
      <% else %>
          <div class="form-group">
            <%= f.label :password_confirmation, "Confirmation", class: 'control-label' %>
            <!--<div class=" col-sm-10">-->
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
      <% end %>

  <div class="form-group">
    <!--    <div class="col-sm-offset-2 col-sm-10"> -->
    <%= submit_tag 'Reset Password', class: 'btn btn-default' %>
    <!--</div>-->
  </div>
  <% end %>
</div>